<%= simple_form_for(@product_delivery_date) do |f| %>
  <% @product_delivery_date.deliveryDate = @product_delivery_date.deliveryDate || Date.today %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :deliveryDate, html5: true , input_html: { class: "style-input" } %>
    <%= f.input :archive, input_html: { class: "style-input" } %>
  <br>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
					
					
					